@model IEnumerable<Easy_Games.Models.Client>

@{
    ViewBag.Title = "Index";
}
    <style>
        .flex-container {
            display: flex;
           
        }

            .flex-container > div {
               
            }
    </style>

<h2>Clients Page</h2>
<br />
<div class="flex-container">
    <p>
        <input type="button" value="Create New Client" onclick="location.href='@Url.Action("Create", "Clients")'" class="btn-info" />
    </p>
 
    <form asp-controller="Client" asp-action="Index" class="form-inline mx-auto search-form" style="padding-left:50%;">

        <input class="form-control mr-sm-2" aria-label="SearchString" type="text" name="SearchString" placeholder="Search Name" />
        <input class="btn btn-style my-2 my-sm-0" type="submit" value="SEARCH" />

    </form>
    </div>
<br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientBalance)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientBalance)
                </td>
                <td>
                    @Html.ActionLink("View Transactions", "ViewTransactions", new { id = item.ClientID }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.ClientID }, new { @class = "btn btn-danger" }) |



                </td>
            </tr>
        }

    </table>
